{
  "name": "@someden/react-bootstrap",
  "version": "0.4.3",
  "description": "React components that uses Bootstrap 4 as a base for styles.",
  "authors": [
    "Denis Efremov <someden@ya.ru>"
  ],
  "license": "MIT",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "es",
    "lib"
  ],
  "tags": [
    "react",
    "bootstrap",
    "ui",
    "components"
  ],
  "keywords": [
    "react",
    "bootstrap",
    "ui",
    "components"
  ],
  "homepage": "https://someden.github.io/react-bootstrap/",
  "repository": {
    "type": "git",
    "url": "someden/react-bootstrap"
  },
  "bugs": {
    "url": "https://github.com/someden/react-bootstrap/issues"
  },
  "scripts": {
    "start": "start-storybook -p 3000",
    "build": "nwb build-react-component --copy-files",
    "clean": "nwb clean-module && nwb clean-demo",
    "prettify": "prettier 'src/**/*.js' 'src/**/*.jsx' 'stories/**/*.js' 'stories/**/*.jsx' '.storybook/**/*.js' --write",
    "lint": "eslint --ext .js,.jsx src/ stories/ .storybook/",
    "deploy": "gh-pages -b build -d . -s '{package.json,es/**,lib/**}'",
    "build-storybook": "build-storybook -o build/storybook",
    "deploy-storybook": "gh-pages -d build/storybook"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "popper.js": "^1.15.0",
    "prop-types": "^15.7.2"
  },
  "devDependencies": {
    "@babel/core": "7.4.3",
    "@storybook/addon-actions": "5.0.10",
    "@storybook/addon-info": "5.0.10",
    "@storybook/addon-links": "5.0.10",
    "@storybook/addon-storysource": "5.0.10",
    "@storybook/addons": "5.0.10",
    "@storybook/react": "5.0.10",
    "@types/prop-types": "15.7.1",
    "@types/react": "16.8.14",
    "@types/react-dom": "16.8.4",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.5",
    "eslint": "5.16.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-plugin-import": "2.17.2",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-react": "7.12.4",
    "gh-pages": "2.0.1",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "nwb": "0.23.0",
    "prettier": "1.17.0",
    "react": "16.8.6",
    "react-dom": "16.8.6"
  },
  "peerDependencies": {
    "react": "^16.8.0",
    "react-dom": "^16.8.0"
  },
  "eslintConfig": {
    "root": true,
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "commonjs": true,
      "es6": true,
      "jest": true
    },
    "plugins": [
      "import",
      "jsx-a11y",
      "react"
    ],
    "rules": {
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "default-case": "off",
      "indent": "off",
      "object-curly-newline": "off",
      "function-paren-newline": "off",
      "jsx-quotes": [
        "error",
        "prefer-single"
      ],
      "implicit-arrow-linebreak": "off",
      "max-len": "off",
      "operator-linebreak": [
        "error",
        "before",
        {
          "overrides": {
            "=": "ignore",
            "&&": "ignore",
            "||": "ignore"
          }
        }
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "**/.storybook/**/*.*",
            "**/stories/**/*.*"
          ]
        }
      ],
      "react/sort-comp": [
        "off"
      ],
      "react/no-array-index-key": "off",
      "react/destructuring-assignment": [
        "off",
        "always"
      ],
      "react/jsx-one-expression-per-line": "off",
      "react/jsx-wrap-multilines": [
        "error",
        {
          "declaration": "parens-new-line",
          "assignment": "parens-new-line",
          "return": "parens-new-line",
          "arrow": "parens-new-line",
          "condition": "parens-new-line",
          "logical": "parens-new-line",
          "prop": "ignore"
        }
      ]
    }
  },
  "eslintIgnore": [
    "/coverage/*",
    "/build/*",
    "/demo/dist/*",
    "/es/*",
    "/lib/*",
    "/umd/*",
    "/public/*"
  ],
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,stories,.storybook}/**/*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
